<% provide(:page_title, "Management") %>

<h2 class="text-center">Authors</h2>
<% @authors.each do |author| %>

   <% if author.admin == true %>
   <div class="form-group">
      <h5 class="h5-responsive"><%= author.name + " (Admin)" %></h5>
   </div>
   <% else %>
      <div class="form-group">
         <h5 class="h5-responsive"><%= author.name %></h5>
         <%= button_to "Delete", admin_destroy_author_path(author), method: :delete, data: { confirm: "You sure?" }, class: "btn btn-sm btn-danger" %>
      </div>
   <% end %>
<% end %> 

<hr>

<h2 class="text-center">Users</h2>
<% @users.each do |user| %>

   <div class="form-group">
      <h5 class="h5-responsive"><%= user.name %></h5>
      <%= button_to "Delete", admin_destroy_user_path(user), method: :delete, data: { confirm: "You sure?" }, class: "btn btn-sm btn-danger" %>
   </div>
  

<% end %> 