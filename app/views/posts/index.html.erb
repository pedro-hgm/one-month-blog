<% provide(:page_title, "All The Posts") %>

    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
           <% @posts.each do |post| %>
          <div class="post-preview">
            <a href="<%= post_path(post) %>">
              <h2 class="post-title">
                <%= post.title %>
              </h2>
              </a>
              <p class="post-meta">Posted by
              <a href="<%= author_path(post.author.name) %>"><%= post.author.name %></a>
             <%= post.created_at.strftime("%b, %d %Y") %></p>
          </div>
          <hr>
  <% end %>

<br>

<%= link_to 'New Post', new_post_path %>
